%h1.my-5= link_to 'Dashboard', dashboard_path

%h2.mt-5= link_to 'Regions', regions_path

.row.mt-5
  .col
    %h1= @region.name
  .col.text-right
    = link_to 'Edit Region', edit_region_path(@region), class: 'btn btn-primary'
    = link_to 'Delete', region_path(@region), data: { confirm: 'Are you sure? This cannot be undone. These tickets will have an Unspecified region.' }, method: :delete, class: 'btn btn-outline-danger'

%h2.my-5 Tickets
- @region.tickets.each do |ticket|
  .mb-4.border.p-2
    %h3= link_to "Ticket #{ticket.id}", ticket_path(ticket)
    %p= ticket.name
    %p.small= ticket.description
