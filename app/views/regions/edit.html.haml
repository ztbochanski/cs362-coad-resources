- provide(:title, 'Edit Region')

%h1.my-5= link_to 'Dashboard', dashboard_path

%h2.mt-5= link_to 'Regions', regions_path

.row.mt-5
  .col
    %h1= @region.name_was
  .col.text-right
    = link_to 'Cancel', region_path(@region), class: 'btn btn-secondary'

.row.mt-5
  .col-5
    = form_for @region do |f|
      - if @region.errors.any?
        #error_explanation
          %h2= "#{pluralize(@region.errors.count, 'error')} prohibited this region from being saved:"
          %ul
            - @region.errors.full_messages.each do |message|
              %li= message
      .form-group
        = f.label(:name)
        = f.text_field :name, class: 'form-control'
      = f.submit 'Save Changes', class: 'btn btn-success'
