%h1.my-5= link_to 'Dashboard', dashboard_path

.row
  .col
    %h2 Resource Categories
  .col.text-right
    = link_to 'Add Resource Category', new_resource_category_path, class: 'btn btn-primary'
.row.mt-5
  .col
    %ul.list-group.nobullets
      - @resource_categories.each do |category|
        %li.mb-2.d-flex.justify-content-between.align-items-center[category]
          = link_to category, class: 'list-group-item list-group-item-action' do
            .row
              .col-9
                %h3= category.name
              .col-3
                %h5= pluralize(category.organizations.count, 'organization')
                %h5= pluralize(category.tickets.count, 'tickets')
