- provide(:title, 'Edit Resource Category')

%h1.my-5= link_to 'Dashboard', dashboard_path

%h2.mt-5= link_to 'Resource Categories', resource_categories_path

.row.mt-5
  .col
    %h1= "Editing #{@resource_category.name_was}"
  .col.text-right
    = link_to 'Cancel', resource_category_path(@resource_category), class: 'btn btn-secondary'

.form-row.mt-5
  .col-5
    = form_for(@resource_category) do |f|
      - if @resource_category.errors.any?
        #error_explanation
          %h2= "#{pluralize(@resource_category.errors.count, 'error')} prohibited this resource category from being saved:"
          %ul
            - @resource_category.errors.full_messages.each do |message|
              %li= message
      .form-group
        = f.label(:name)
        = f.text_field :name, class: 'form-control'
      = f.submit 'Save changes', class: 'btn btn-success'
